<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.song.sysuinfoserviceplatform">



    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/sysu"
        android:name=".club.globalClub"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".log_in_suyr3.LoginActivity_suyr3"
            android:label="中大信息服务平台"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".student.StudentPage"
            android:label="个人主页">
            <intent-filter>
                <action android:name="android.intent.action.Student_Page" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".student.stu_activity.DetailActivity" />
        <activity
            android:name=".club.ClubPage"
            android:label="正在进行">
            <intent-filter>
                <action android:name="android.intent.action.Club_Page" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".club.ClubRegister"
            android:label="社团注册">
            <intent-filter>
                <action android:name="android.intent.action.Club_Register" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".club.ApplyActivity"
            android:label="申请活动">
            <intent-filter>
                <action android:name="android.intent.action.Activity_Apply" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".club.ClubInfoChange"
            android:label="修改信息">
            <intent-filter>
                <action android:name="android.intent.action.Info_Change" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".admin.AdminActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.Admin_Activity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".admin.DetailActivity"
            android:parentActivityName=".admin.AdminActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".admin.AdminActivity" />
        </activity>
        <activity
            android:name=".admin.DetailClub"
            android:parentActivityName=".admin.AdminActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".admin.AdminActivity" />
        </activity>

    </application>

</manifest>