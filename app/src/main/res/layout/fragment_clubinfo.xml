<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/club_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="26dp"
                android:layout_marginStart="26dp"
                android:layout_marginTop="@dimen/md_keylines"
                android:text="社团名称"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView0"
                android:layout_alignBottom="@+id/textView0"
                android:layout_marginLeft="140dp"
                android:text="中山大学青年志愿者协会"
                android:textColor="#000000"
                android:textSize="18sp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView0"
                android:layout_alignStart="@+id/textView0"
                android:layout_below="@+id/textView0"
                android:layout_marginTop="28dp"
                android:text="社团性质"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView1"
                android:layout_alignBottom="@+id/textView1"
                android:layout_marginLeft="140dp"
                android:textColor="#000000"
                android:text="公益类"
                android:textSize="18sp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView1"
                android:layout_alignStart="@+id/textView1"
                android:layout_below="@+id/textView1"
                android:layout_marginTop="28dp"
                android:text="社团简介"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView3"
                android:layout_alignBottom="@+id/textView3"
                android:layout_marginLeft="140dp"
                android:layout_marginRight="30dp"
                android:textColor="#000000"
                android:text="中大青协中大青协中大青协中大青协中大青协中大青协中大青协中大青协中大青协中大青协中大青协中大青协中大青协中大青协"
                android:textSize="18sp"
                android:gravity="center_vertical"/>



            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView3"
                android:layout_alignStart="@+id/textView3"
                android:layout_below="@+id/detail"
                android:layout_marginTop="25dp"
                android:text="指导老师"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/teacher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView4"
                android:layout_alignBottom="@+id/textView4"
                android:layout_marginLeft="140dp"
                android:textColor="#000000"
                android:text="何金鹏"
                android:textSize="18sp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView4"
                android:layout_alignStart="@+id/textView4"
                android:layout_below="@+id/textView4"
                android:layout_marginTop="25dp"
                android:text="业务指导单位"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/governor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView5"
                android:layout_alignBottom="@+id/textView5"
                android:layout_marginLeft="160dp"
                android:textColor="#000000"
                android:text="中山大学团委"
                android:textSize="18sp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView5"
                android:layout_alignStart="@+id/textView5"
                android:layout_below="@+id/governor"
                android:layout_marginTop="25dp"
                android:text="社团第一负责人"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/leader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView6"
                android:layout_alignBottom="@+id/textView6"
                android:layout_marginLeft="160dp"
                android:textColor="#000000"
                android:text="隔壁老王"
                android:textSize="18sp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView6"
                android:layout_alignStart="@+id/textView6"
                android:layout_below="@+id/leader"
                android:layout_marginTop="25dp"
                android:text="联系邮箱"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/mail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView7"
                android:layout_alignBottom="@+id/textView7"
                android:layout_marginLeft="140dp"
                android:textColor="#000000"
                android:text="geblw@mail2.sysu.edu.cn"
                android:textSize="18sp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView7"
                android:layout_alignStart="@+id/textView7"
                android:layout_below="@+id/mail"
                android:layout_marginTop="25dp"
                android:text="联系电话"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView8"
                android:layout_alignBottom="@+id/textView8"
                android:layout_marginLeft="140dp"
                android:textColor="#000000"
                android:text="13719441788"
                android:textSize="18sp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView8"
                android:layout_alignStart="@+id/textView8"
                android:layout_below="@+id/phone"
                android:layout_marginTop="25dp"
                android:text="社团LOGO"
                android:textSize="18sp"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignTop="@+id/textView9"
                android:layout_marginLeft="140dp"
                android:id="@+id/logo"
                android:src="@drawable/icon_volunteer" />


            <Button
                android:id="@+id/submit_button"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:layout_below="@+id/logo"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="@dimen/md_keylines"
                android:textColor="#FFFFFF"
                android:background="@color/colorPrimary"
                android:layout_centerHorizontal="true"
                android:text="修改" />

        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.design.widget.CoordinatorLayout>