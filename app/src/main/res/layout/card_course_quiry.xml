<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_main_act_recent"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:layout_gravity="center"
    android:layout_marginBottom="16dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:foreground="?attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="0.3dp"

            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="103dp"
            android:background="@drawable/horizontal_divider" />

        <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:layout_alignParentBottom="true"

            android:layout_alignParentStart="true"
            android:layout_marginBottom="68dp"
            android:background="@drawable/horizontal_divider" />

        <TextView
            android:id="@+id/school_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/semester"
            android:layout_marginTop="23dp"
            android:text="学年"
            android:textSize="65px" />

        <TextView
            android:id="@+id/semester"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="33dp"
            android:layout_marginTop="61dp"
            android:text="学期"
            android:textSize="65px" />

        <TextView
            android:id="@+id/couseType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/school_year"
            android:layout_marginTop="117dp"
            android:text="课程类型" />

        <CheckBox
            android:id="@+id/checkBox1"
            android:layout_width="121dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/school_year"
            android:layout_marginBottom="122dp"
            android:checked="true"
            android:text="专必"
            android:textSize="65px" />

        <CheckBox
            android:id="@+id/checkBox2"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/school_year"
            android:layout_below="@+id/checkBox1"
            android:layout_marginTop="-122dp"
            android:checked="true"
            android:text="公必"
            android:textSize="65px" />

        <CheckBox
            android:id="@+id/checkBox3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/checkBox1"
            android:layout_marginEnd="102dp"
            android:checked="true"
            android:text="专选"
            android:textSize="65px" />

        <CheckBox
            android:id="@+id/checkBox4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/checkBox3"
            android:layout_below="@+id/checkBox1"
            android:layout_marginTop="-122dp"
            android:checked="true"
            android:text="公选"
            android:textSize="65px" />

        <Button
            android:id="@+id/button_go"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/school_year"
            android:layout_marginBottom="11dp"
            android:background="@android:color/transparent"
            android:text="GO!"
            android:textColor="@color/colorAccent"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/school_tear"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/school_year"
            android:layout_alignStart="@+id/checkBox3"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="2017-2018"
            android:textAlignment="center"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/editText2"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/checkBox3"
            android:layout_below="@+id/school_year"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="1"
            android:textAlignment="center"
            android:textSize="18sp" />

        <Button
            android:id="@+id/add_btn_2"
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/school_year"
            android:layout_toStartOf="@+id/checkBox3"
            android:background="@android:color/transparent"
            android:text="add"
            android:textColor="@color/colorAccent" />

        <Button
            android:id="@+id/add_btn_"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/school_year"
            android:layout_toStartOf="@+id/checkBox3"
            android:background="@android:color/transparent"
            android:text="add"
            android:textColor="@color/colorAccent" />

        <Button
            android:id="@+id/min_btn_2"
            android:layout_width="49dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/school_year"
            android:background="@android:color/transparent"
            android:text="min"
            android:textColor="@color/colorAccent" />

        <Button
            android:id="@+id/min_btn_1"
            android:layout_width="49dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:background="@android:color/transparent"
            android:text="min"
            android:textColor="@color/colorAccent" />
    </RelativeLayout>
</android.support.v7.widget.CardView>