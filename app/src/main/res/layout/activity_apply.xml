<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/apply_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".club.ApplyActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            android:title="申请活动"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="21dp"
                android:layout_marginStart="21dp"
                android:layout_marginTop="@dimen/md_keylines"
                android:text="活动类型"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView1"
                android:layout_alignBottom="@+id/textView1"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="21dp"
                android:layout_marginRight="21dp"
                android:hint="公益类/体育类"
                android:ems="10"
                android:inputType="text"
                android:gravity="center"/>

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/name"
                android:layout_alignBottom="@+id/name"
                android:layout_alignLeft="@+id/textView1"
                android:layout_alignStart="@+id/textView1"
                android:text="活动名称"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/type"
                android:layout_alignRight="@+id/type"
                android:layout_below="@+id/type"
                android:ems="10"
                android:inputType="text"
                android:gravity="center"/>

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView13"
                android:layout_alignStart="@+id/textView13"
                android:layout_below="@+id/name"
                android:layout_marginTop="10dp"
                android:text="副标题"
                android:textSize="18sp"/>

            <EditText
                android:id="@+id/slogan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/type"
                android:layout_alignLeft="@+id/textView12"
                android:layout_alignRight="@+id/name"
                android:layout_alignStart="@+id/textView12"
                android:layout_below="@+id/textView12"
                android:layout_marginTop="1dp"
                android:ems="10"
                android:inputType="textMultiLine" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView12"
                android:layout_alignStart="@+id/textView12"
                android:layout_below="@+id/slogan"
                android:layout_marginTop="10dp"
                android:text="活动简介"
                android:textSize="18sp"/>

            <EditText
                android:id="@+id/detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/type"
                android:layout_alignLeft="@+id/textView3"
                android:layout_alignRight="@+id/type"
                android:layout_alignStart="@+id/textView3"
                android:layout_below="@+id/textView3"
                android:layout_marginTop="1dp"
                android:ems="10"
                android:inputType="textMultiLine" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/time"
                android:layout_alignBottom="@+id/time"
                android:layout_alignLeft="@+id/textView10"
                android:layout_alignStart="@+id/textView10"
                android:text="活动时间"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/detail"
                android:layout_alignRight="@+id/detail"
                android:layout_below="@+id/organiser"
                android:ems="10"
                android:inputType="text"
                android:gravity="center"/>

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/detail"
                android:layout_alignStart="@+id/detail"
                android:layout_below="@+id/detail"
                android:layout_marginTop="20dp"
                android:text="公益时/体育章数"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/bonus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/organiser"
                android:layout_alignLeft="@+id/organiser"
                android:layout_alignStart="@+id/organiser"
                android:layout_alignBaseline="@+id/textView11"
                android:layout_alignBottom="@+id/textView11"
                android:ems="10"
                android:inputType="text"
                android:gravity="center"/>

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView11"
                android:layout_alignStart="@+id/textView11"
                android:layout_below="@+id/textView11"
                android:layout_marginTop="24dp"
                android:text="主办社团"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/organiser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView10"
                android:layout_alignBottom="@+id/textView10"
                android:layout_alignLeft="@+id/time"
                android:layout_alignStart="@+id/time"
                android:ems="10"
                android:gravity="center"
                android:inputType="text" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/place"
                android:layout_alignBottom="@+id/place"
                android:layout_alignLeft="@+id/textView4"
                android:layout_alignStart="@+id/textView4"
                android:text="活动地点"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/time"
                android:layout_alignStart="@+id/time"
                android:layout_below="@+id/time"
                android:ems="10"
                android:inputType="text"
                android:gravity="center"/>

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/hirenum"
                android:layout_alignBottom="@+id/hirenum"
                android:layout_alignLeft="@+id/textView5"
                android:layout_alignStart="@+id/textView5"
                android:text="招募人数"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/hirenum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/place"
                android:layout_alignStart="@+id/place"
                android:layout_below="@+id/place"
                android:ems="10"
                android:inputType="number"
                android:gravity="center"/>

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView6"
                android:layout_alignStart="@+id/textView6"
                android:layout_below="@+id/hirenum"
                android:layout_marginTop="15dp"
                android:text="招募方式"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/hireway"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView7"
                android:layout_alignBottom="@+id/textView7"
                android:layout_alignLeft="@+id/hirenum"
                android:layout_alignStart="@+id/hirenum"
                android:ems="10"
                android:hint="面试筛选、先到先得等"
                android:inputType="text"
                android:textSize="18sp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/hirelink"
                android:layout_alignBottom="@+id/hirelink"
                android:layout_alignLeft="@+id/textView7"
                android:layout_alignStart="@+id/textView7"
                android:text="报名问卷链接"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/hirelink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/hireway"
                android:layout_alignStart="@+id/hireway"
                android:layout_below="@+id/hireway"
                android:ems="10"
                android:inputType="textUri" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/photo_button"
                android:layout_alignBottom="@+id/photo_button"
                android:layout_alignLeft="@+id/textView8"
                android:layout_alignStart="@+id/textView8"
                android:text="活动图片"
                android:textSize="18sp" />

            <Button
                android:id="@+id/photo_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/hirelink"
                android:layout_alignStart="@+id/hirelink"
                android:layout_below="@+id/hirelink"
                android:text="上传活动图片"
                android:ems="13" />

            <ImageView
                android:id="@+id/actpic"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:layout_margin="18dp"
                android:layout_below="@+id/photo_button"
                android:src="@drawable/service2"/>

            <Button
                android:id="@+id/submit_button"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:layout_below="@+id/actpic"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:textColor="#FFFFFF"
                android:background="@color/colorPrimary"
                android:layout_centerHorizontal="true"
                android:text="提交" />


        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.design.widget.CoordinatorLayout>